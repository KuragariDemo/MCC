@model MCC.Models.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Secure Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ==========================================================
           NEON DARK PAYMENT DESIGN SYSTEM
        ========================================================== */
    :root {
        --bg-void: #020617;
        --glass-panel: rgba(15, 23, 42, 0.7);
        --neon-primary: #8b5cf6; /* Electric Purple */
        --neon-secondary: #06b6d4; /* Cyan Glow */
        --neon-accent: #10b981; /* Emerald Success */
        --neon-grad: linear-gradient(135deg, #8b5cf6 0%, #06b6d4 100%);
        --text-ghost: #f8fafc;
        --text-slate: #94a3b8;
        --border-glass: rgba(255, 255, 255, 0.08);
    }

    .payment-page-wrapper {
        background-color: var(--bg-void);
        background-image: radial-gradient(at 0% 0%, rgba(139, 92, 246, 0.1) 0px, transparent 50%), radial-gradient(at 100% 100%, rgba(6, 182, 212, 0.1) 0px, transparent 50%);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
        font-family: 'Inter', system-ui, sans-serif;
    }

    .payment-card {
        background: var(--glass-panel);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        border: 1px solid var(--border-glass);
        border-radius: 32px;
        max-width: 500px;
        width: 100%;
        overflow: hidden;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.7);
        position: relative;
    }

        /* Holographic Top Line */
        .payment-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: var(--neon-grad);
            box-shadow: 0 0 15px var(--neon-primary);
            z-index: 10;
        }

    .payment-header {
        padding: 40px 40px 20px 40px;
        text-align: center;
    }

    .payment-title {
        font-weight: 900;
        font-size: 2.2rem;
        letter-spacing: -1.5px;
        color: var(--text-ghost);
        margin-bottom: 5px;
        text-shadow: 0 0 10px rgba(139, 92, 246, 0.3);
    }

    .payment-subtitle {
        color: var(--neon-secondary);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 700;
    }

    .payment-body {
        padding: 0 40px 40px 40px;
    }

    /* Order Summary: Neon Glass Style */
    .order-summary-box {
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid var(--border-glass);
        border-radius: 20px;
        padding: 20px 25px;
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .summary-label {
        font-size: 0.7rem;
        font-weight: 800;
        color: var(--text-slate);
        text-transform: uppercase;
        letter-spacing: 1.5px;
        margin-bottom: 4px;
        display: block;
    }

    .summary-value {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--text-ghost);
    }

    .summary-price {
        font-size: 1.8rem;
        font-weight: 900;
        color: var(--neon-accent);
        text-shadow: 0 0 15px rgba(16, 185, 129, 0.4);
        text-align: right;
    }

    /* Input Field Styling */
    .form-group-custom {
        margin-bottom: 22px;
    }

    .payment-label {
        font-size: 0.75rem;
        font-weight: 800;
        color: var(--neon-primary);
        text-transform: uppercase;
        letter-spacing: 1.5px;
        margin-bottom: 10px;
        display: block;
    }

    .payment-input {
        width: 100%;
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid var(--border-glass);
        border-radius: 14px;
        padding: 15px 18px;
        color: #fff;
        font-size: 1rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .payment-input:focus {
            outline: none;
            border-color: var(--neon-secondary);
            background: rgba(0, 0, 0, 0.6);
            box-shadow: 0 0 15px rgba(6, 182, 212, 0.2);
        }

        .payment-input::placeholder {
            color: rgba(255,255,255,0.2);
        }

    /* Gradient Submit Button */
    .btn-pay {
        background: var(--neon-grad);
        color: white;
        border: none;
        padding: 18px;
        font-size: 1rem;
        font-weight: 800;
        border-radius: 16px;
        cursor: pointer;
        width: 100%;
        transition: all 0.3s ease;
        box-shadow: 0 10px 20px rgba(139, 92, 246, 0.3);
        margin-top: 10px;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

        .btn-pay:hover {
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 15px 30px rgba(6, 182, 212, 0.4);
            filter: brightness(1.1);
        }

    /* Security Footer */
    .secure-badge {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        color: var(--text-slate);
        font-size: 0.8rem;
        font-weight: 600;
        margin-top: 30px;
        opacity: 0.8;
    }

        .secure-badge svg {
            color: var(--neon-accent);
        }

    .validation-msg {
        color: #fb7185;
        font-size: 0.8rem;
        font-weight: 600;
        margin-top: 6px;
        display: block;
    }
</style>

<div class="payment-page-wrapper">

    <div class="payment-card">
        <div class="payment-header">
            <h2 class="payment-title">Secure Hub</h2>
            <div class="payment-subtitle">Encrypted Ticket Acquisition</div>
        </div>

        <div class="payment-body">
            <form method="post">
                <input type="hidden" asp-for="EventId" />
                <input type="hidden" asp-for="SeatType" />
                <input type="hidden" asp-for="Price" />

                <div class="order-summary-box">
                    <div>
                        <span class="summary-label">Access Level</span>
                        <div class="summary-value">@Model.SeatType.ToUpper() NODE</div>
                    </div>
                    <div>
                        <span class="summary-label text-end">Requirement</span>
                        <div class="summary-price">@Model.Price <span style="font-size: 0.8rem; color: var(--text-slate);">THB</span></div>
                    </div>
                </div>

                <div class="form-group-custom">
                    <label class="payment-label">Identity Label (Cardholder)</label>
                    <input asp-for="CardName" class="payment-input" placeholder="FULL NAME" autocomplete="cc-name" />
                    <span asp-validation-for="CardName" class="validation-msg"></span>
                </div>

                <div class="form-group-custom">
                    <label class="payment-label">Digital Asset ID (Card Number)</label>
                    <input asp-for="CardNumber" class="payment-input" placeholder="0000 0000 0000 0000" autocomplete="cc-number" />
                    <span asp-validation-for="CardNumber" class="validation-msg"></span>
                </div>

                <div class="row g-3">
                    <div class="col-6">
                        <div class="form-group-custom">
                            <label class="payment-label">Exp. Key</label>
                            <input asp-for="Expiry" class="payment-input" placeholder="MM/YY" autocomplete="cc-exp" />
                            <span asp-validation-for="Expiry" class="validation-msg"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group-custom">
                            <label class="payment-label">Security CVV</label>
                            <input asp-for="CVV" type="password" class="payment-input" placeholder="***" autocomplete="cc-csc" maxlength="4" />
                            <span asp-validation-for="CVV" class="validation-msg"></span>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn-pay">
                    Execute Payment System
                </button>

                <div class="secure-badge">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" />
                    </svg>
                    <span>SSL 256-BIT ENCRYPTION ACTIVE</span>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}