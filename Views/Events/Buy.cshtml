@model SEM.Models.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Secure Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ==========================================================
           INLINE CSS: SECURE PAYMENT CHECKOUT
        ========================================================== */
    .payment-page-wrapper {
        background-color: #f8fafc;
        min-height: 100vh;
        font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
        padding: 60px 20px;
        display: flex;
        justify-content: center;
        align-items: flex-start;
    }

    .payment-card {
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.08);
        max-width: 550px;
        width: 100%;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.02);
    }

    /* Vibrant Gradient Header */
    .payment-header {
        background: linear-gradient(135deg, #4158D0 0%, #C850C0 100%);
        padding: 30px;
        text-align: center;
        color: white;
        position: relative;
    }

        .payment-header::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at top right, rgba(255,255,255,0.15) 0%, transparent 60%);
            pointer-events: none;
        }

    .payment-title {
        font-weight: 900;
        font-size: 1.8rem;
        margin-bottom: 5px;
        letter-spacing: -0.5px;
    }

    .payment-subtitle {
        font-size: 0.95rem;
        opacity: 0.9;
        font-weight: 500;
    }

    /* Body & Order Summary */
    .payment-body {
        padding: 40px;
    }

    .order-summary-box {
        background: #f1f5f9;
        border-radius: 15px;
        padding: 20px 25px;
        margin-bottom: 35px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border: 1px dashed #cbd5e1;
    }

    .summary-label {
        font-size: 0.8rem;
        font-weight: 700;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 5px;
        display: block;
    }

    .summary-value {
        font-size: 1.15rem;
        font-weight: 800;
        color: #1e293b;
    }

    .summary-price {
        font-size: 1.6rem;
        font-weight: 900;
        color: #10b981; /* Premium Emerald */
        text-align: right;
    }

    /* Form Inputs */
    .payment-label {
        font-size: 0.8rem;
        font-weight: 700;
        color: #475569;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
        display: block;
    }

    .payment-input {
        width: 100%;
        padding: 14px 18px;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        font-size: 15px;
        font-weight: 500;
        color: #1e293b;
        background-color: #f8fafc;
        transition: all 0.3s ease;
    }

        .payment-input::placeholder {
            color: #94a3b8;
        }

        /* Magenta Glow on Focus */
        .payment-input:focus {
            outline: none;
            border-color: #C850C0;
            background-color: #ffffff;
            box-shadow: 0 0 0 4px rgba(200, 80, 192, 0.15);
        }

    /* Gradient Pay Button */
    .btn-pay {
        background: linear-gradient(43deg, #4158D0 0%, #C850C0 46%, #FFCC70 100%);
        color: #fff;
        border: none;
        padding: 16px;
        font-size: 1.1rem;
        font-weight: 800;
        border-radius: 12px;
        cursor: pointer;
        width: 100%;
        transition: all 0.3s ease;
        box-shadow: 0 10px 25px rgba(200, 80, 192, 0.35);
        margin-top: 15px;
        letter-spacing: 0.5px;
    }

        .btn-pay:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(200, 80, 192, 0.5);
            color: #fff;
        }

    .secure-badge {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        color: #64748b;
        font-size: 0.85rem;
        font-weight: 600;
        margin-top: 25px;
    }
</style>

<div class="payment-page-wrapper">

    <div class="payment-card">

        <div class="payment-header">
            <h2 class="payment-title">Secure Checkout</h2>
            <div class="payment-subtitle">Complete your ticket purchase</div>
        </div>

        <div class="payment-body">

            <form method="post">
                <input type="hidden" asp-for="EventId" />
                <input type="hidden" asp-for="SeatType" />
                <input type="hidden" asp-for="Price" />

                <div class="order-summary-box">
                    <div>
                        <span class="summary-label">Ticket Type</span>
                        <div class="summary-value">@Model.SeatType Pass</div>
                    </div>
                    <div>
                        <span class="summary-label text-end">Total Due</span>
                        <div class="summary-price">@Model.Price <span style="font-size: 1rem; color: #94a3b8;">THB</span></div>
                    </div>
                </div>

                <h5 style="font-weight: 800; color: #1e293b; margin-bottom: 20px;">Payment Details</h5>

                <div class="mb-4">
                    <label class="payment-label">Cardholder Name</label>
                    <input asp-for="CardName" class="payment-input" placeholder="e.g., Jane Doe" autocomplete="cc-name" />
                    <span asp-validation-for="CardName" class="text-danger mt-1 d-block fw-bold" style="font-size: 0.85rem;"></span>
                </div>

                <div class="mb-4">
                    <label class="payment-label">Card Number</label>
                    <input asp-for="CardNumber" class="payment-input" placeholder="0000 0000 0000 0000" autocomplete="cc-number" />
                    <span asp-validation-for="CardNumber" class="text-danger mt-1 d-block fw-bold" style="font-size: 0.85rem;"></span>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-6">
                        <label class="payment-label">Expiry Date</label>
                        <input asp-for="Expiry" class="payment-input" placeholder="MM/YY" autocomplete="cc-exp" />
                        <span asp-validation-for="Expiry" class="text-danger mt-1 d-block fw-bold" style="font-size: 0.85rem;"></span>
                    </div>

                    <div class="col-6">
                        <label class="payment-label">CVV</label>
                        <input asp-for="CVV" type="password" class="payment-input" placeholder="123" autocomplete="cc-csc" maxlength="4" />
                        <span asp-validation-for="CVV" class="text-danger mt-1 d-block fw-bold" style="font-size: 0.85rem;"></span>
                    </div>
                </div>

                <button type="submit" class="btn-pay">
                    Pay @Model.Price THB Now
                </button>

                <div class="secure-badge">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" />
                    </svg>
                    Payments are secure and encrypted
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}