@model IEnumerable<MCC.Models.Event>

@{
    ViewData["Title"] = "All Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ==========================================================
           NEON DARK DISCOVERY SYSTEM
        ========================================================== */
    :root {
        --bg-void: #020617;
        --glass-panel: rgba(15, 23, 42, 0.7);
        --neon-primary: #8b5cf6; /* Electric Purple */
        --neon-secondary: #06b6d4; /* Cyan Glow */
        --neon-grad: linear-gradient(135deg, #8b5cf6 0%, #06b6d4 100%);
        --text-ghost: #f8fafc;
        --text-slate: #94a3b8;
        --border-glass: rgba(255, 255, 255, 0.08);
    }

    .events-page-wrapper {
        background-color: var(--bg-void);
        background-image: radial-gradient(at 0% 0%, rgba(139, 92, 246, 0.1) 0px, transparent 50%), radial-gradient(at 100% 100%, rgba(6, 182, 212, 0.1) 0px, transparent 50%);
        min-height: 100vh;
        padding: 60px 0;
        color: var(--text-ghost);
        font-family: 'Inter', system-ui, sans-serif;
    }

    /* Gradient Title */
    .events-page-title {
        font-weight: 900;
        font-size: 3rem;
        letter-spacing: -2px;
        background: var(--neon-grad);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 5px;
        display: inline-block;
        text-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
    }

    /* Floating Neon Search Card */
    .filter-card {
        background: var(--glass-panel);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 35px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        margin-bottom: 50px;
        border: 1px solid var(--border-glass);
    }

    .filter-input {
        width: 100%;
        padding: 14px 20px;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid var(--border-glass);
        border-radius: 12px;
        font-size: 15px;
        font-weight: 500;
        color: #fff;
        transition: all 0.3s ease;
    }

        .filter-input:focus {
            outline: none;
            border-color: var(--neon-secondary);
            background: rgba(0, 0, 0, 0.5);
            box-shadow: 0 0 15px rgba(6, 182, 212, 0.2);
        }

        .filter-input::placeholder {
            color: var(--text-slate);
        }

    /* Gradient Search Button */
    .btn-search-gradient {
        background: var(--neon-grad);
        color: #fff;
        border: none;
        padding: 14px 35px;
        font-size: 15px;
        font-weight: 800;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 10px 20px rgba(139, 92, 246, 0.3);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .btn-search-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(6, 182, 212, 0.4);
            filter: brightness(1.1);
        }

    .btn-reset-outline {
        border: 1px solid var(--border-glass);
        color: var(--text-slate);
        padding: 12px 25px;
        font-weight: 700;
        border-radius: 12px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        text-transform: uppercase;
        font-size: 14px;
    }

        .btn-reset-outline:hover {
            background: rgba(255, 255, 255, 0.05);
            color: #fff;
            border-color: var(--text-slate);
        }

    /* Modern Neon Table */
    .events-table {
        border-collapse: separate;
        border-spacing: 0 15px;
        width: 100%;
    }

        .events-table th {
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 2px;
            color: var(--text-slate);
            border: none;
            padding: 0 25px 10px 25px;
            font-weight: 800;
        }

    .event-row {
        background: var(--glass-panel);
        backdrop-filter: blur(10px);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 1px solid var(--border-glass);
    }

        .event-row:hover {
            transform: scale(1.01);
            border-color: var(--neon-secondary);
            box-shadow: 0 10px 30px rgba(6, 182, 212, 0.15);
            background: rgba(30, 41, 59, 0.8);
        }

    .events-table td {
        padding: 25px;
        border: none;
        vertical-align: middle;
        color: var(--text-ghost);
    }

        .events-table td:first-child {
            border-top-left-radius: 20px;
            border-bottom-left-radius: 20px;
            font-weight: 800;
            font-size: 1.2rem;
            letter-spacing: -0.5px;
        }

        .events-table td:last-child {
            border-top-right-radius: 20px;
            border-bottom-right-radius: 20px;
        }

    /* Badges & Buttons */
    .badge-category {
        background: rgba(139, 92, 246, 0.15);
        color: var(--neon-primary);
        padding: 8px 16px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        border: 1px solid rgba(139, 92, 246, 0.3);
    }

    .btn-details {
        background: transparent;
        color: var(--neon-secondary);
        border: 2px solid var(--neon-secondary);
        border-radius: 12px;
        padding: 12px 24px;
        font-weight: 800;
        font-size: 0.85rem;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .btn-details:hover {
            background: var(--neon-secondary);
            color: #000;
            box-shadow: 0 0 20px rgba(6, 182, 212, 0.4);
        }

    .empty-state {
        background: var(--glass-panel);
        border-radius: 24px;
        border: 1px dashed var(--border-glass);
        padding: 60px;
        text-align: center;
    }
</style>

<div class="events-page-wrapper">
    <div class="container">

        <div class="mb-5 text-center text-md-start">
            <h2 class="events-page-title">Discover Events</h2>
            <p class="text-slate fs-5">Scan the MCC network for upcoming cultural experiences.</p>
        </div>

        <div class="filter-card">
            <form method="get" class="row g-4 align-items-end">

                <div class="col-md-3">
                    <label class="small fw-bold text-uppercase mb-2 d-block opacity-75">Classification</label>
                    <input type="text" name="category" class="filter-input" placeholder="e.g. Music" />
                </div>

                <div class="col-md-3">
                    <label class="small fw-bold text-uppercase mb-2 d-block opacity-75">Node / Location</label>
                    <input type="text" name="location" class="filter-input" placeholder="e.g. Bangkok" />
                </div>

                <div class="col-md-3">
                    <label class="small fw-bold text-uppercase mb-2 d-block opacity-75">Date</label>
                    <input type="date" name="date" class="filter-input" />
                </div>

                <div class="col-md-3">
                    <label class="small fw-bold text-uppercase mb-2 d-block opacity-75">Max Credits (THB)</label>
                    <input type="number" name="maxPrice" class="filter-input" placeholder="0.00" />
                </div>

                <div class="col-12 mt-4 d-flex gap-3 justify-content-center justify-content-md-end">
                    <a asp-action="Index" class="btn-reset-outline">
                        Reset Cache
                    </a>
                    <button type="submit" class="btn-search-gradient">
                        Initiate Search
                    </button>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="events-table">
                <thead>
                    <tr>
                        <th class="ps-4">Protocol Title</th>
                        <th>Classification</th>
                        <th>Location Node</th>
                        <th>Timestamp</th>
                        <th class="text-end pe-4">Command</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="event-row">
                                <td class="ps-4">
                                    @item.Title
                                </td>
                                <td>
                                    <span class="badge-category">@item.Category?.Name</span>
                                </td>
                                <td>
                                    <div class="text-slate fw-bold">
                                        <span style="color: var(--neon-secondary)">📍</span> @item.Venue?.Location
                                    </div>
                                </td>
                                <td>
                                    <div class="text-slate fw-bold">
                                        <span style="color: var(--neon-primary)">📅</span> @item.Date.ToString("dd MMM yyyy")
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-details">
                                        Sync Details
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">
                                <div class="empty-state">
                                    <div class="mb-3" style="font-size: 3rem; filter: drop-shadow(0 0 10px var(--neon-primary));">📡</div>
                                    <h4 class="text-white fw-bold">No Data Streams Found</h4>
                                    <p class="text-slate">Adjust your search parameters to reconnect with event nodes.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>