@model MCC.Models.Event

@{
    ViewData["Title"] = "Event Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ==========================================================
           NEON DARK EVENT DETAILS SYSTEM
        ========================================================== */
    :root {
        --bg-void: #020617;
        --glass-panel: rgba(15, 23, 42, 0.7);
        --neon-primary: #8b5cf6; /* Electric Purple */
        --neon-cyan: #06b6d4; /* Cyan Glow */
        --neon-rose: #f43f5e; /* Rose Glow */
        --neon-amber: #f59e0b; /* Amber Glow */
        --text-ghost: #f8fafc;
        --text-slate: #94a3b8;
        --border-glass: rgba(255, 255, 255, 0.08);
    }

    .details-page-wrapper {
        background-color: var(--bg-void);
        background-image: radial-gradient(at 0% 0%, rgba(139, 92, 246, 0.1) 0px, transparent 50%), radial-gradient(at 100% 100%, rgba(6, 182, 212, 0.1) 0px, transparent 50%);
        min-height: 100vh;
        padding: 60px 0;
        color: var(--text-ghost);
        font-family: 'Inter', system-ui, sans-serif;
    }

    /* Event Hero Card - Holographic Glass */
    .event-hero-card {
        background: var(--glass-panel);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        border: 1px solid var(--border-glass);
        border-radius: 35px;
        overflow: hidden;
        margin-bottom: 50px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    .event-hero-banner {
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.3) 0%, rgba(6, 182, 212, 0.3) 100%);
        padding: 60px 40px;
        border-bottom: 1px solid var(--border-glass);
        position: relative;
    }

    .event-hero-title {
        font-weight: 900;
        font-size: 3.5rem;
        letter-spacing: -2px;
        background: linear-gradient(to bottom, #fff, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 30px rgba(139, 92, 246, 0.4);
    }

    .event-info-bar {
        padding: 30px 40px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .info-label {
        font-size: 0.7rem;
        font-weight: 800;
        color: var(--neon-cyan);
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 8px;
        display: block;
    }

    .info-value {
        font-size: 1.1rem;
        font-weight: 700;
        color: #fff;
    }

    .badge-category {
        background: rgba(139, 92, 246, 0.15);
        color: var(--neon-primary);
        padding: 5px 15px;
        border-radius: 12px;
        border: 1px solid rgba(139, 92, 246, 0.3);
    }

    /* Pricing Tier Cards */
    .pricing-card {
        background: var(--glass-panel);
        backdrop-filter: blur(15px);
        border-radius: 30px;
        padding: 40px 30px;
        text-align: center;
        border: 1px solid var(--border-glass);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .pricing-card:hover {
            transform: translateY(-12px);
            border-color: rgba(255, 255, 255, 0.2);
            box-shadow: 0 0 30px rgba(255, 255, 255, 0.05);
        }

        /* Glowing Top Indicators */
        .pricing-card::after {
            content: '';
            position: absolute;
            top: 0;
            left: 20%;
            right: 20%;
            height: 3px;
            filter: blur(4px);
        }

    .tier-low::after {
        background: var(--neon-cyan);
        box-shadow: 0 0 15px var(--neon-cyan);
    }

    .tier-medium::after {
        background: var(--neon-amber);
        box-shadow: 0 0 15px var(--neon-amber);
    }

    .tier-high::after {
        background: var(--neon-rose);
        box-shadow: 0 0 15px var(--neon-rose);
    }

    .pricing-tier-name {
        font-size: 0.85rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: var(--text-slate);
        margin-bottom: 20px;
    }

    .pricing-price {
        font-size: 3rem;
        font-weight: 900;
        color: #fff;
        margin-bottom: 10px;
    }

    .pricing-currency {
        font-size: 1rem;
        color: var(--text-slate);
        font-weight: 500;
    }

    .pricing-seats {
        font-size: 0.8rem;
        font-weight: 700;
        background: rgba(255,255,255,0.05);
        padding: 8px 16px;
        border-radius: 50px;
        display: inline-block;
        margin-bottom: 35px;
        border: 1px solid rgba(255,255,255,0.1);
    }

    /* Action Buttons */
    .btn-buy {
        color: white;
        border: none;
        padding: 18px;
        font-size: 14px;
        font-weight: 800;
        border-radius: 16px;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 1px;
        display: block;
        width: 100%;
        transition: all 0.3s ease;
        margin-top: auto;
    }

    .btn-buy-low {
        background: rgba(6, 182, 212, 0.1);
        border: 1px solid var(--neon-cyan);
        color: var(--neon-cyan);
    }

    .btn-buy-medium {
        background: rgba(245, 158, 11, 0.1);
        border: 1px solid var(--neon-amber);
        color: var(--neon-amber);
    }

    .btn-buy-high {
        background: rgba(244, 63, 94, 0.1);
        border: 1px solid var(--neon-rose);
        color: var(--neon-rose);
    }

    .btn-buy:hover {
        filter: brightness(1.2);
        transform: scale(1.02);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .back-link {
        color: var(--text-slate);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.8rem;
        transition: color 0.3s;
    }

        .back-link:hover {
            color: var(--neon-cyan);
        }
</style>

<div class="details-page-wrapper">
    <div class="container" style="max-width: 1100px;">

        <div class="mb-5">
            <a href="javascript:history.back()" class="text-decoration-none back-link">
                <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="margin-top: -3px;"><path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" /></svg>
                System Return
            </a>
        </div>

        <div class="event-hero-card">
            <div class="event-hero-banner">
                <h1 class="event-hero-title">@Model.Title</h1>
            </div>

            <div class="event-info-bar">
                <div class="info-item">
                    <span class="info-label">Classification</span>
                    <div><span class="badge-category">@Model.Category?.Name</span></div>
                </div>

                <div class="info-item">
                    <span class="info-label">Deployment Node</span>
                    <span class="info-value">📍 @Model.Venue?.Name</span>
                </div>

                <div class="info-item">
                    <span class="info-label">Launch Timestamp</span>
                    <span class="info-value">📅 @Model.Date.ToString("dd.MM.yyyy")</span>
                </div>
            </div>
        </div>



        <h3 class="text-center mb-5" style="font-weight: 800; letter-spacing: 2px; text-transform: uppercase; font-size: 1.2rem; color: var(--neon-cyan);">Select Access Tier</h3>

        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="pricing-card tier-low">
                    <div class="pricing-tier-name">Standard Node</div>
                    <div class="pricing-price">
                        @Model.LowPrice<span class="pricing-currency">.00</span>
                    </div>
                    <div><span class="pricing-seats">@Model.LowSeats Units Available</span></div>

                    <a asp-action="Buy" asp-route-id="@Model.Id" asp-route-seatType="Low" class="btn-buy btn-buy-low">
                        Initialize Standard
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="pricing-card tier-medium">
                    <div class="pricing-tier-name">Premium Node</div>
                    <div class="pricing-price">
                        @Model.MediumPrice<span class="pricing-currency">.00</span>
                    </div>
                    <div><span class="pricing-seats" style="color: var(--neon-amber)">@Model.MediumSeats Units Available</span></div>

                    <a asp-action="Buy" asp-route-id="@Model.Id" asp-route-seatType="Medium" class="btn-buy btn-buy-medium">
                        Initialize Premium
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="pricing-card tier-high">
                    <div class="pricing-tier-name">Elite VIP Node</div>
                    <div class="pricing-price">
                        @Model.HighPrice<span class="pricing-currency">.00</span>
                    </div>
                    <div><span class="pricing-seats" style="color: var(--neon-rose)">@Model.HighSeats Units Available</span></div>

                    <a asp-action="Buy" asp-route-id="@Model.Id" asp-route-seatType="High" class="btn-buy btn-buy-high">
                        Initialize Elite
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>