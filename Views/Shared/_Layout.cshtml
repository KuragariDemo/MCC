@using Microsoft.AspNetCore.Identity
@using SEM.Areas.Identity.Data
@inject SignInManager<SEMUser> SignInManager
@inject UserManager<SEMUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SEM</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="layout-body">

    <header class="layout-header">
        <nav class="navbar navbar-expand-lg layout-navbar">
            <div class="container">
                <a class="navbar-brand layout-brand fw-bold" asp-controller="Home" asp-action="Index">
                    SEM
                </a>

                <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link layout-nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link layout-nav-link" asp-controller="Events" asp-action="Index">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link layout-nav-link" asp-controller="Member" asp-action="Index">Member</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav align-items-center">

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item me-3">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="nav-link layout-nav-link" asp-controller="Admin" asp-action="Dashboard">
                                        Admin Dashboard
                                    </a>
                                }
                                else if (User.IsInRole("Member"))
                                {
                                    <a class="nav-link layout-nav-link" asp-controller="Member" asp-action="Index">
                                        Member Dashboard
                                    </a>
                                }
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn layout-btn-outline">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="nav-link layout-nav-link" asp-area="Identity" asp-page="/Account/Login">
                                    Sign In
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn layout-btn-gradient" asp-area="Identity" asp-page="/Account/Register">
                                    Sign Up
                                </a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="layout-main">
        @RenderBody()
    </main>

    <footer class="layout-footer mt-5 pt-5 pb-4">
        <div class="container">
            <div class="row mb-4">
                <div class="col-md-6 mb-4 mb-md-0">
                    <h5 class="layout-footer-title">Smart Event Management (SEM)</h5>
                    <p class="layout-footer-text">
                        SEM is a modern platform developed for the Metropolitan Cultural Council
                        to manage events, ticketing, and community engagement efficiently.
                    </p>
                </div>

                <div class="col-md-6 text-md-end">
                    <h5 class="layout-footer-title">Follow Us</h5>
                    <div class="layout-social-links">
                        <a href="#" class="layout-social-link">Facebook</a>
                        <a href="#" class="layout-social-link">Instagram</a>
                        <a href="#" class="layout-social-link">Twitter</a>
                    </div>
                </div>
            </div>

            <hr class="layout-footer-divider" />

            <div class="text-center layout-footer-copy">
                &copy; @DateTime.Now.Year - SEM. All Rights Reserved.
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>