@using Microsoft.AspNetCore.Identity
@using SEM.Areas.Identity.Data
@inject SignInManager<SEMUser> SignInManager
@inject UserManager<SEMUser> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SEM</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- ===== HEADER / NAVBAR ===== -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    SEM
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">

                    <!-- Left Menu -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Events" asp-action="Index">Events</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Member" asp-action="Index">Member</a>
                        </li>
                    </ul>

                    <!-- Right Menu -->
                    <ul class="navbar-nav">

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Member"
                                   asp-action="Index">
                                    Profile
                                </a>
                            </li>

                            <li class="nav-item">
                                <form asp-area="Identity"
                                      asp-page="/Account/Logout"
                                      method="post"
                                      class="d-inline">
                                    <button type="submit"
                                            class="nav-link btn btn-link"
                                            style="border:none;">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-area="Identity"
                                   asp-page="/Account/Login">
                                    Sign In
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white ms-2"
                                   asp-area="Identity"
                                   asp-page="/Account/Register">
                                    Sign Up
                                </a>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- ===== MAIN CONTENT ===== -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- ===== FOOTER ===== -->
    <footer class="bg-dark text-white mt-5 pt-4 pb-3">
        <div class="container">
            <div class="row">

                <!-- Company Info -->
                <div class="col-md-6">
                    <h5>Smart Event Management (SEM)</h5>
                    <p>
                        SEM is a modern platform developed for the Metropolitan Cultural Council
                        to manage events, ticketing, and community engagement efficiently.
                    </p>
                </div>

                <!-- Social Links -->
                <div class="col-md-6 text-md-end">
                    <h5>Follow Us</h5>
                    <a href="#" class="text-white me-3">Facebook</a>
                    <a href="#" class="text-white me-3">Instagram</a>
                    <a href="#" class="text-white">Twitter</a>
                </div>

            </div>

            <hr class="border-light" />

            <div class="text-center">
                &copy; @DateTime.Now.Year - SEM. All Rights Reserved.
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)


</body>
</html>
