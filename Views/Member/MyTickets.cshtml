@model IEnumerable<MCC.Models.Ticket>

@{
    ViewData["Title"] = "My Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ==========================================================
           NEON DARK TICKET LEDGER SYSTEM
        ========================================================== */
    :root {
        --bg-void: #020617;
        --glass-panel: rgba(15, 23, 42, 0.7);
        --neon-primary: #8b5cf6; /* Electric Purple */
        --neon-cyan: #06b6d4; /* Cyan Glow */
        --neon-emerald: #10b981; /* Success Green */
        --neon-grad: linear-gradient(135deg, #8b5cf6 0%, #06b6d4 100%);
        --text-ghost: #f8fafc;
        --text-slate: #94a3b8;
        --border-glass: rgba(255, 255, 255, 0.08);
    }

    .member-page-wrapper {
        background-color: var(--bg-void);
        background-image: radial-gradient(at 0% 0%, rgba(139, 92, 246, 0.1) 0px, transparent 50%), radial-gradient(at 100% 100%, rgba(6, 182, 212, 0.1) 0px, transparent 50%);
        min-height: 100vh;
        padding: 60px 40px;
        font-family: 'Inter', system-ui, sans-serif;
        color: var(--text-ghost);
    }

    .member-card {
        background: var(--glass-panel);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        border: 1px solid var(--border-glass);
        border-radius: 32px;
        padding: 50px;
        max-width: 1100px;
        margin: 0 auto;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        position: relative;
    }

        /* Holographic Top bar */
        .member-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 10%;
            right: 10%;
            height: 3px;
            background: var(--neon-grad);
            box-shadow: 0 0 15px var(--neon-primary);
            filter: blur(1px);
        }

    .member-title {
        font-weight: 900;
        font-size: 2.5rem;
        letter-spacing: -1.5px;
        background: var(--neon-grad);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 5px;
        text-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
    }

    /* Modern Neon Table */
    .ticket-table {
        border-collapse: separate;
        border-spacing: 0 15px;
        width: 100%;
        margin-top: 20px;
    }

        .ticket-table th {
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 2px;
            color: var(--text-slate);
            border: none;
            padding: 0 20px 10px 20px;
            font-weight: 800;
        }

    .ticket-row {
        background: rgba(255, 255, 255, 0.02);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border-radius: 16px;
    }

        .ticket-row:hover {
            transform: scale(1.01) translateX(5px);
            background: rgba(255, 255, 255, 0.05);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

    .ticket-table td {
        padding: 25px 20px;
        border-top: 1px solid var(--border-glass);
        border-bottom: 1px solid var(--border-glass);
        vertical-align: middle;
        color: var(--text-ghost);
    }

        .ticket-table td:first-child {
            border-left: 1px solid var(--border-glass);
            border-top-left-radius: 16px;
            border-bottom-left-radius: 16px;
            font-weight: 800;
            font-size: 1.15rem;
        }

        .ticket-table td:last-child {
            border-right: 1px solid var(--border-glass);
            border-top-right-radius: 16px;
            border-bottom-right-radius: 16px;
        }

    /* Status & Pricing Badges */
    .seat-badge {
        background: rgba(6, 182, 212, 0.1);
        color: var(--neon-secondary);
        padding: 6px 16px;
        border-radius: 10px;
        font-size: 0.75rem;
        font-weight: 800;
        letter-spacing: 1px;
        text-transform: uppercase;
        border: 1px solid rgba(6, 182, 212, 0.2);
        box-shadow: 0 0 10px rgba(6, 182, 212, 0.1);
    }

    .price-tag {
        font-weight: 900;
        color: var(--neon-emerald);
        font-size: 1.2rem;
        text-shadow: 0 0 10px rgba(16, 185, 129, 0.3);
    }

    /* Neon Action Button */
    .btn-ticket-action {
        background: transparent;
        color: var(--neon-primary);
        border: 1px solid var(--neon-primary);
        border-radius: 12px;
        padding: 10px 20px;
        font-weight: 800;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .btn-ticket-action:hover {
            background: var(--neon-primary);
            color: var(--bg-void);
            box-shadow: 0 0 20px rgba(139, 92, 246, 0.5);
            transform: translateY(-2px);
        }

    .empty-state {
        background: rgba(0, 0, 0, 0.2);
        border: 1px dashed var(--border-glass);
        border-radius: 24px;
        padding: 80px 40px;
        text-align: center;
    }

    .scanline {
        width: 100%;
        height: 2px;
        background: rgba(139, 92, 246, 0.1);
        position: absolute;
        animation: scan 4s linear infinite;
    }

    @@keyframes scan {
        from {
            top: 0;
        }

        to {
            top: 100%;
        }
    }
</style>

<div class="d-flex">

    @await Html.PartialAsync("_MemberSidebar")

    <div class="member-page-wrapper flex-fill">

        <div class="member-card">
            <div class="scanline"></div>

            <h2 class="member-title">Access Ledger</h2>
            <p class="text-slate mb-5" style="letter-spacing: 0.5px;">Verified digital assets for upcoming event nodes.</p>

            <div class="table-responsive">
                <table class="ticket-table">
                    <thead>
                        <tr>
                            <th class="ps-4">Protocol Event</th>
                            <th>Tier Access</th>
                            <th>Valuation</th>
                            <th>Sync Date</th>
                            <th class="text-end pe-4">Command</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var ticket in Model)
                            {
                                <tr class="ticket-row">
                                    <td class="ps-4">
                                        <div class="text-white">@ticket.Event.Title</div>
                                        <div style="font-size: 0.75rem; color: var(--neon-primary); font-weight: 700;">NODE_ID: @ticket.EventId</div>
                                    </td>
                                    <td>
                                        <span class="seat-badge">@ticket.SeatType</span>
                                    </td>
                                    <td>
                                        <span class="price-tag">@ticket.Price <small style="font-size: 0.7rem;">THB</small></span>
                                    </td>
                                    <td>
                                        <div class="text-slate" style="font-size: 0.9rem; font-weight: 600;">
                                            @ticket.PurchaseDate.ToString("yyyy.MM.dd")
                                        </div>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-controller="Member"
                                           asp-action="MyTicketsDetails"
                                           asp-route-id="@ticket.EventId"
                                           class="btn-ticket-action">
                                            Telemetry
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">
                                    <div class="empty-state">
                                        <div class="mb-3" style="font-size: 3rem; filter: drop-shadow(0 0 10px var(--neon-primary));">🛰️</div>
                                        <h4 class="text-white fw-bold">NO ASSETS DETECTED</h4>
                                        <p class="text-slate opacity-75">Connect to the discovery network to sync event nodes.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>