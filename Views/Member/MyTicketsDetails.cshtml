@model MCC.Models.Ticket

@{
    ViewData["Title"] = "Event Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ==========================================================
           NEON DARK DIGITAL TICKET & FEEDBACK SYSTEM
        ========================================================== */
    :root {
        --bg-void: #020617;
        --glass-panel: rgba(15, 23, 42, 0.8);
        --neon-primary: #8b5cf6; /* Electric Purple */
        --neon-secondary: #06b6d4; /* Cyan Glow */
        --neon-accent: #f59e0b; /* Amber Gold */
        --neon-grad: linear-gradient(135deg, #8b5cf6 0%, #06b6d4 100%);
        --text-ghost: #f8fafc;
        --text-slate: #94a3b8;
        --border-glass: rgba(255, 255, 255, 0.08);
    }

    .member-page-wrapper {
        background-color: var(--bg-void);
        background-image: radial-gradient(at 0% 0%, rgba(139, 92, 246, 0.1) 0px, transparent 50%), radial-gradient(at 100% 100%, rgba(6, 182, 212, 0.1) 0px, transparent 50%);
        min-height: 100vh;
        font-family: 'Inter', system-ui, sans-serif;
        padding: 50px 40px;
        color: var(--text-ghost);
    }

    .member-title {
        font-weight: 900;
        font-size: 2.5rem;
        letter-spacing: -1.5px;
        background: var(--neon-grad);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 30px;
    }

    /* --- THE NEON DIGITAL TICKET --- */
    .vip-ticket-card {
        background: var(--glass-panel);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        border: 1px solid var(--border-glass);
        border-radius: 30px;
        max-width: 550px;
        position: relative;
        overflow: visible;
        margin-bottom: 40px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.7);
    }

    .ticket-header {
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.2) 0%, rgba(6, 182, 212, 0.2) 100%);
        padding: 45px 35px;
        border-radius: 30px 30px 0 0;
        border-bottom: 1px solid var(--border-glass);
        position: relative;
    }

    .ticket-event-title {
        font-size: 2rem;
        font-weight: 900;
        color: #fff;
        margin-bottom: 10px;
        text-shadow: 0 0 20px rgba(139, 92, 246, 0.5);
    }

    .ticket-category-badge {
        background: var(--neon-grad);
        color: #000;
        padding: 6px 16px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        display: inline-block;
    }

    .ticket-body {
        padding: 35px;
    }

    .detail-label {
        font-size: 0.7rem;
        font-weight: 800;
        color: var(--neon-secondary);
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 8px;
    }

    .detail-value {
        font-size: 1.2rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 25px;
    }

    /* Ticket Perforation / Divider */
    .ticket-divider {
        position: relative;
        border-top: 2px dashed rgba(255, 255, 255, 0.1);
        margin: 10px 0 35px 0;
    }

        .ticket-divider::before,
        .ticket-divider::after {
            content: '';
            position: absolute;
            top: -16px;
            width: 32px;
            height: 32px;
            background-color: var(--bg-void);
            border-radius: 50%;
            z-index: 5;
        }

        .ticket-divider::before {
            left: -52px;
            border-right: 1px solid var(--border-glass);
        }

        .ticket-divider::after {
            right: -52px;
            border-left: 1px solid var(--border-glass);
        }

    /* --- FEEDBACK SECTION --- */
    .feedback-card {
        background: var(--glass-panel);
        border: 1px solid var(--border-glass);
        border-radius: 30px;
        padding: 40px;
        max-width: 550px;
    }

    .feedback-title {
        font-weight: 800;
        color: #fff;
        font-size: 1.4rem;
        margin-bottom: 20px;
        letter-spacing: -0.5px;
    }

    /* Interactive Neon Stars */
    .star-rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
        gap: 10px;
        margin-bottom: 25px;
    }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            font-size: 2.8rem;
            color: rgba(255,255,255,0.1);
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .star-rating input:checked ~ label,
            .star-rating label:hover,
            .star-rating label:hover ~ label {
                color: var(--neon-accent);
                text-shadow: 0 0 20px rgba(245, 158, 11, 0.6);
                transform: scale(1.1);
            }

    .feedback-textarea {
        width: 100%;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid var(--border-glass);
        border-radius: 16px;
        padding: 20px;
        color: #fff;
        transition: all 0.3s ease;
        margin-bottom: 20px;
    }

        .feedback-textarea:focus {
            outline: none;
            border-color: var(--neon-primary);
            box-shadow: 0 0 20px rgba(139, 92, 246, 0.2);
        }

    .btn-neon-action {
        background: var(--neon-grad);
        color: #000;
        border: none;
        padding: 16px 35px;
        font-weight: 800;
        border-radius: 14px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .btn-neon-action:hover {
            transform: translateY(-3px);
            box-shadow: 0 0 30px rgba(6, 182, 212, 0.5);
        }

    .btn-back {
        color: var(--text-slate);
        text-decoration: none;
        font-weight: 700;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        margin-top: 20px;
        transition: color 0.3s;
    }

    .back-glow:hover {
        color: var(--neon-secondary);
        text-shadow: 0 0 10px var(--neon-secondary);
    }
</style>

<div class="d-flex">

    @await Html.PartialAsync("_MemberSidebar")

    <div class="member-page-wrapper flex-fill">

        <h2 class="member-title">Digital Access Node</h2>

        <div class="vip-ticket-card">
            <div class="ticket-header">
                <span class="ticket-category-badge mb-3">@Model.Event.Category.Name</span>
                <h3 class="ticket-event-title">@Model.Event.Title</h3>
                <div style="font-size: 1rem; font-weight: 600; color: var(--neon-secondary);">
                    SYNCED: @Model.Event.Date.ToString("dd.MM.yyyy")
                </div>
            </div>

            <div class="ticket-body">
                <div class="row">
                    <div class="col-12">
                        <div class="detail-label">Coordinate Node (Venue)</div>
                        <div class="detail-value">@Model.Event.Venue.Name</div>
                    </div>
                </div>

                <div class="ticket-divider"></div>

                <div class="row align-items-end">
                    <div class="col-6">
                        <div class="detail-label">Access Level</div>
                        <div class="detail-value" style="margin-bottom:0;">@Model.SeatType.ToUpper()</div>
                    </div>
                    <div class="col-6 text-end">
                        <div class="detail-label">Asset Value</div>
                        <div class="detail-value" style="color: var(--neon-accent); margin-bottom:0;">@Model.Price THB</div>
                    </div>
                </div>

                <div class="text-center mt-5 opacity-50">
                    <div class="detail-label">Purchase Timestamp: @Model.PurchaseDate.ToString("yyyy-MM-dd // HH:mm")</div>
                </div>
            </div>
        </div>

        <div class="mb-5">
            <a asp-action="MyTickets" class="btn-back back-glow">
                <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" class="me-2"><path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" /></svg>
                RETURN TO LEDGER
            </a>
        </div>

        @if (Model.Event.Date < DateTime.Now)
        {
            <div class="feedback-card">
                <h4 class="feedback-title">Rate Experience Protocol</h4>
                <p class="text-slate small mb-4">Transmission date has passed. Please provide feedback telemetry.</p>

                <form asp-controller="Events" asp-action="SubmitFeedback" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="eventId" value="@Model.Event.Id" />

                    <div class="star-rating">
                        @for (int i = 5; i >= 1; i--)
                        {
                            <input type="radio" id="star@i" name="rating" value="@i" required />
                            <label for="star@i">★</label>
                        }
                    </div>

                    <textarea name="comment" class="feedback-textarea" placeholder="Input transmission log (optional)..."></textarea>

                    <button type="submit" class="btn-neon-action">
                        Transmit Feedback
                    </button>
                </form>
            </div>
        }

    </div>
</div>