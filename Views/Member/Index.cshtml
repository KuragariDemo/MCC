@{
    ViewData["Title"] = "Member Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ==========================================================
           INLINE CSS: MEMBER DASHBOARD PAGE
        ========================================================== */
    .member-page-wrapper {
        background-color: #f8fafc; /* Soft slate background */
        min-height: 100vh;
        font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
        padding: 50px 40px;
    }

    /* Gradient Title */
    .member-title {
        font-weight: 900;
        font-size: 2.2rem;
        letter-spacing: -0.5px;
        margin-bottom: 5px;
        background: linear-gradient(43deg, #4158D0 0%, #C850C0 46%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: inline-block;
    }

    /* Floating Metric Card */
    .member-metric-card {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); /* Fresh cyan gradient */
        border-radius: 20px;
        padding: 35px 30px;
        color: white;
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: 0 15px 35px rgba(0, 242, 254, 0.2);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        z-index: 1;
        height: 100%;
    }

        .member-metric-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 242, 254, 0.4);
        }

    .metric-content {
        position: relative;
        z-index: 2;
    }

    .metric-title {
        font-size: 1.1rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        opacity: 0.9;
        margin-bottom: 5px;
    }

    .metric-value {
        font-size: 3.5rem;
        font-weight: 900;
        margin: 0;
        line-height: 1;
        text-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .metric-label-small {
        font-size: 1.1rem;
        font-weight: 600;
        opacity: 0.85;
        margin-left: 5px;
    }

    /* Decorative Watermark Icon */
    .metric-icon {
        position: absolute;
        right: -10px;
        bottom: -20px;
        opacity: 0.15;
        transform: rotate(-10deg);
        transition: all 0.4s ease;
        z-index: 0;
    }

    .member-metric-card:hover .metric-icon {
        transform: scale(1.1) rotate(0deg);
        opacity: 0.25;
    }

    /* Quick Action Card */
    .quick-action-card {
        background: #ffffff;
        border-radius: 20px;
        padding: 30px 35px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.03);
        border: 1px solid rgba(0,0,0,0.02);
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        transition: all 0.3s ease;
    }

        .quick-action-card:hover {
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.06);
            transform: translateY(-4px);
        }

    .btn-action-outline {
        border: 2px solid #e2e8f0;
        color: #4158D0;
        padding: 12px 25px;
        border-radius: 12px;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
        text-align: center;
        margin-top: 15px;
    }

        .btn-action-outline:hover {
            border-color: #4158D0;
            background: rgba(65, 88, 208, 0.05);
            color: #4158D0;
            transform: translateX(4px); /* Slight slide to right on hover */
        }
</style>

<div class="d-flex">

    @await Html.PartialAsync("_MemberSidebar")

    <div class="member-page-wrapper flex-fill">

        <div class="mb-5">
            <h2 class="member-title">Welcome to Your Dashboard</h2>
            <p class="text-muted pb-3" style="border-bottom: 2px dashed #e2e8f0;">Here is an overview of your account and ticket activity.</p>
        </div>

        <div class="row g-4">

            <div class="col-md-6 col-lg-5">
                <div class="member-metric-card">
                    <div class="metric-content">
                        <h4 class="metric-title">Total Bookings</h4>
                        <div class="d-flex align-items-baseline">
                            <h1 class="metric-value">0</h1>
                            <span class="metric-label-small">Tickets</span>
                        </div>
                    </div>
                    <div class="metric-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M0 4.5A1.5 1.5 0 0 1 1.5 3h13A1.5 1.5 0 0 1 16 4.5V6a.5.5 0 0 1-.5.5 1.5 1.5 0 0 0 0 3 .5.5 0 0 1 .5.5v1.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 11.5V10a.5.5 0 0 1 .5-.5 1.5 1.5 0 1 0 0-3A.5.5 0 0 1 0 6V4.5ZM1.5 4a.5.5 0 0 0-.5.5v1.05a2.5 2.5 0 0 1 0 4.9v1.05a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-1.05a2.5 2.5 0 0 1 0-4.9V4.5a.5.5 0 0 0-.5-.5h-13Z" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-5">
                <div class="quick-action-card">
                    <h5 style="font-weight: 800; color: #1e293b; margin-bottom: 10px;">Looking for something to do?</h5>
                    <p class="text-muted" style="font-size: 0.95rem; line-height: 1.6;">Browse our upcoming cultural events, concerts, and exhibitions to book your next experience.</p>

                    <a asp-controller="Events" asp-action="Index" class="btn-action-outline">
                        Browse Upcoming Events &rarr;
                    </a>
                </div>
            </div>

        </div>

    </div>
</div>