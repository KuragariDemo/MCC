@{
    ViewData["Title"] = "Member Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ==========================================================
           NEON DARK MEMBER DESIGN SYSTEM
        ========================================================== */
    :root {
        --bg-obsidian: #020617;
        --glass-panel: rgba(15, 23, 42, 0.7);
        --neon-primary: #8b5cf6; /* Electric Purple */
        --neon-secondary: #06b6d4; /* Cyan Glow */
        --neon-grad: linear-gradient(135deg, #8b5cf6 0%, #06b6d4 100%);
        --text-ghost: #f8fafc;
        --text-slate: #94a3b8;
        --border-glass: rgba(255, 255, 255, 0.08);
    }

    /* Page Wrapper with Cyber Atmosphere */
    .member-page-wrapper {
        background-color: var(--bg-obsidian);
        background-image: radial-gradient(at 0% 0%, rgba(139, 92, 246, 0.1) 0px, transparent 50%), radial-gradient(at 100% 100%, rgba(6, 182, 212, 0.1) 0px, transparent 50%);
        min-height: 100vh;
        font-family: 'Inter', system-ui, sans-serif;
        padding: 50px 40px;
        color: var(--text-ghost);
    }

    /* Header Styling */
    .dashboard-header {
        margin-bottom: 50px;
        position: relative;
    }

    .member-title {
        font-weight: 900;
        font-size: 2.5rem;
        letter-spacing: -1.5px;
        background: var(--neon-grad);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 10px;
    }

    .header-line {
        height: 1px;
        width: 100%;
        background: linear-gradient(90deg, var(--neon-secondary), transparent);
        opacity: 0.3;
    }

    /* Neon Metric Card */
    .member-metric-card {
        background: var(--glass-panel);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid var(--border-glass);
        border-radius: 30px;
        padding: 40px;
        position: relative;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        height: 100%;
    }

        .member-metric-card:hover {
            transform: translateY(-10px);
            border-color: var(--neon-secondary);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), 0 0 20px rgba(6, 182, 212, 0.1);
        }

        /* Vertical Neon Glow Accent */
        .member-metric-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--neon-grad);
            box-shadow: 0 0 15px var(--neon-primary);
        }

    .metric-title {
        font-size: 0.85rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: var(--text-slate);
        margin-bottom: 15px;
    }

    .metric-value {
        font-size: 4rem;
        font-weight: 900;
        line-height: 1;
        color: #fff;
        text-shadow: 0 0 20px rgba(139, 92, 246, 0.4);
    }

    .metric-label-small {
        font-size: 1rem;
        font-weight: 600;
        color: var(--neon-secondary);
        margin-left: 10px;
        letter-spacing: 1px;
    }

    /* Action Card Styling */
    .quick-action-card {
        background: var(--glass-panel);
        backdrop-filter: blur(20px);
        border: 1px solid var(--border-glass);
        border-radius: 30px;
        padding: 40px;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .action-heading {
        font-weight: 800;
        color: #fff;
        font-size: 1.4rem;
        margin-bottom: 15px;
        letter-spacing: -0.5px;
    }

    .action-desc {
        color: var(--text-slate);
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 25px;
    }

    /* Neon Button */
    .btn-action-neon {
        background: transparent;
        border: 2px solid var(--neon-secondary);
        color: var(--neon-secondary);
        padding: 14px 28px;
        border-radius: 14px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
        text-align: center;
        align-self: flex-start;
    }

        .btn-action-neon:hover {
            background: var(--neon-secondary);
            color: var(--bg-obsidian);
            box-shadow: 0 0 25px var(--neon-secondary);
            transform: scale(1.05);
        }

    /* Watermark Icon */
    .metric-icon {
        position: absolute;
        right: -10px;
        bottom: -10px;
        color: var(--neon-primary);
        opacity: 0.1;
        transition: all 0.4s ease;
    }

    .member-metric-card:hover .metric-icon {
        opacity: 0.3;
        transform: scale(1.2) rotate(-5deg);
    }
</style>

<div class="d-flex">

    @await Html.PartialAsync("_MemberSidebar")

    <div class="member-page-wrapper flex-fill">

        <div class="dashboard-header">
            <h2 class="member-title">User Command Center</h2>
            <p class="text-slate pb-3">Telemetry overview for your cultural engagements.</p>
            <div class="header-line"></div>
        </div>

        <div class="row g-5">

            <div class="col-md-6 col-lg-5">
                <div class="member-metric-card">
                    <div class="metric-content">
                        <h4 class="metric-title">Active Passes</h4>
                        <div class="d-flex align-items-baseline">
                            <h1 class="metric-value">0</h1>
                            <span class="metric-label-small">Nodes Synced</span>
                        </div>
                    </div>
                    <div class="metric-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M0 4.5A1.5 1.5 0 0 1 1.5 3h13A1.5 1.5 0 0 1 16 4.5V6a.5.5 0 0 1-.5.5 1.5 1.5 0 0 0 0 3 .5.5 0 0 1 .5.5v1.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 11.5V10a.5.5 0 0 1 .5-.5 1.5 1.5 0 1 0 0-3A.5.5 0 0 1 0 6V4.5ZM1.5 4a.5.5 0 0 0-.5.5v1.05a2.5 2.5 0 0 1 0 4.9v1.05a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-1.05a2.5 2.5 0 0 1 0-4.9V4.5a.5.5 0 0 0-.5-.5h-13Z" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-6">
                <div class="quick-action-card">
                    <h5 class="action-heading">Initiate New Discovery?</h5>
                    <p class="action-desc">Scan the local network for upcoming cultural events, concerts, and digital exhibitions to sync to your schedule.</p>

                    <a asp-controller="Events" asp-action="Index" class="btn-action-neon">
                        Scan Catalog &rarr;
                    </a>
                </div>
            </div>

        </div>

    </div>
</div>