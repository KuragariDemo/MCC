@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex">

    @await Html.PartialAsync("_AdminSidebar")

    <div class="admin-content-wrapper flex-fill">

        <div class="mb-5">
            <h2 class="admin-page-title">Admin Dashboard</h2>
            <p class="text-muted">Platform overview, event metrics, and user analytics.</p>
        </div>

        <div class="row g-4">

            <div class="col-md-6 col-lg-5">
                <div class="admin-metric-card admin-metric-events">
                    <div class="metric-content">
                        <h4 class="metric-title">Total Events</h4>
                        <h1 class="metric-value">@ViewBag.TotalEvents</h1>
                    </div>
                    <div class="metric-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-5">
                <div class="admin-metric-card admin-metric-users">
                    <div class="metric-content">
                        <h4 class="metric-title">Total Users</h4>
                        <h1 class="metric-value">@ViewBag.TotalUsers</h1>
                    </div>
                    <div class="metric-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                            <path fill-rule="evenodd" d="M5.216 14A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216z" />
                            <path d="M4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z" />
                        </svg>
                    </div>
                </div>
            </div>

        </div>

        <div class="admin-card mt-5" style="max-width: 1000px; min-height: 300px; display: flex; align-items: center; justify-content: center;">
            <p class="text-muted" style="font-weight: 500;"><em>Chart analytics coming soon...</em></p>
        </div>

    </div>
</div>