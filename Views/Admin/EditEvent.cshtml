@model SEM.Models.Event

@{
    ViewData["Title"] = "Edit Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ==========================================================
           INLINE CSS: EDIT EVENT PAGE
        ========================================================== */
    .edit-page-wrapper {
        background-color: #f8fafc;
        min-height: 100vh;
        font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
        padding: 50px 40px;
    }

    .edit-card {
        background: #ffffff;
        border-radius: 20px;
        padding: 45px 40px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.04);
        max-width: 950px; /* Wider card to fit the 3-column pricing grid */
        margin: 0 auto;
        position: relative;
        overflow: hidden;
    }

        /* Gradient Top Line */
        .edit-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #4158D0, #C850C0, #FFCC70);
        }

    /* Gradient Title */
    .edit-title {
        font-weight: 900;
        font-size: 2.2rem;
        letter-spacing: -0.5px;
        margin-bottom: 10px;
        background: linear-gradient(43deg, #4158D0 0%, #C850C0 46%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: inline-block;
    }

    /* Input Field Styling */
    .edit-label {
        font-size: 0.85rem;
        font-weight: 700;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
        display: block;
    }

    .edit-input {
        width: 100%;
        padding: 14px 18px;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 15px;
        font-weight: 500;
        color: #334155;
        background-color: #f8fafc;
        transition: all 0.3s ease;
    }

    /* Custom Dropdown Arrow */
    .edit-select {
        appearance: none;
        -webkit-appearance: none;
        background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='%2364748b' viewBox='0 0 16 16'%3E%3Cpath fill-rule='evenodd' d='M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z'/%3E%3C/svg%3E");
        background-repeat: no-repeat;
        background-position: right 1rem center;
        background-size: 16px 12px;
        padding-right: 2.5rem;
    }

    /* Magenta Glow on Focus */
    .edit-input:focus {
        outline: none;
        border-color: #C850C0;
        background-color: #ffffff;
        box-shadow: 0 0 0 4px rgba(200, 80, 192, 0.15);
    }

    /* Pricing Tier Boxes */
    .tier-box {
        background: #f1f5f9;
        border-radius: 15px;
        padding: 25px 20px;
        border: 1px solid rgba(0,0,0,0.02);
        transition: all 0.3s ease;
        height: 100%;
    }

        .tier-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
            background: #ffffff;
            border-color: #e2e8f0;
        }

    .tier-title {
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 20px;
        font-size: 1rem;
        text-align: center;
    }

    /* Action Buttons */
    .edit-btn-save {
        background: linear-gradient(43deg, #4158D0 0%, #C850C0 46%, #FFCC70 100%);
        color: #fff;
        border: none;
        padding: 15px 40px;
        font-size: 16px;
        font-weight: 800;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(200, 80, 192, 0.3);
    }

        .edit-btn-save:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(200, 80, 192, 0.5);
        }

    .edit-btn-cancel {
        background: transparent;
        color: #64748b;
        border: 2px solid #e2e8f0;
        padding: 13px 30px;
        font-size: 16px;
        font-weight: 700;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

        .edit-btn-cancel:hover {
            border-color: #94a3b8;
            color: #334155;
            background-color: #f1f5f9;
        }
</style>

<div class="d-flex">

    @await Html.PartialAsync("_AdminSidebar")

    <div class="edit-page-wrapper flex-fill">

        <div class="edit-card">

            <h2 class="edit-title">Edit Event</h2>
            <p class="text-muted mb-4 pb-2" style="border-bottom: 1px solid #f1f5f9;">Update details, location, and ticket pricing tiers below.</p>

            <form asp-action="EditEvent" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row g-4 mb-4">
                    <div class="col-md-12">
                        <label class="edit-label">Event Title</label>
                        <input asp-for="Title" class="edit-input" placeholder="e.g., Summer Jazz Festival" />
                    </div>

                    <div class="col-md-4">
                        <label class="edit-label">Category</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="edit-input edit-select">
                            <option value="">-- Select Category --</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label class="edit-label">Venue</label>
                        <select asp-for="VenueId" asp-items="ViewBag.Venues" class="edit-input edit-select">
                            <option value="">-- Select Venue --</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label class="edit-label">Date</label>
                        <input asp-for="Date" type="date" class="edit-input" />
                    </div>
                </div>

                <hr style="border-top: 2px dashed #e2e8f0; margin: 30px 0; opacity: 1;" />

                <h4 class="mb-4" style="font-weight: 800; color: #1e293b; font-size: 1.25rem;">Ticket Pricing & Inventory</h4>

                <div class="row g-4 mb-5">

                    <div class="col-md-4">
                        <div class="tier-box">
                            <h5 class="tier-title text-primary">Low Tier</h5>

                            <label class="edit-label">Price ($)</label>
                            <input asp-for="LowPrice" type="number" step="0.01" class="edit-input mb-3" placeholder="0.00" />

                            <label class="edit-label">Total Seats</label>
                            <input asp-for="LowSeats" type="number" class="edit-input" placeholder="0" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="tier-box">
                            <h5 class="tier-title text-warning">Medium Tier</h5>

                            <label class="edit-label">Price ($)</label>
                            <input asp-for="MediumPrice" type="number" step="0.01" class="edit-input mb-3" placeholder="0.00" />

                            <label class="edit-label">Total Seats</label>
                            <input asp-for="MediumSeats" type="number" class="edit-input" placeholder="0" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="tier-box">
                            <h5 class="tier-title text-danger">High Tier</h5>

                            <label class="edit-label">Price ($)</label>
                            <input asp-for="HighPrice" type="number" step="0.01" class="edit-input mb-3" placeholder="0.00" />

                            <label class="edit-label">Total Seats</label>
                            <input asp-for="HighSeats" type="number" class="edit-input" placeholder="0" />
                        </div>
                    </div>

                </div>

                <div class="d-flex justify-content-end gap-3 pt-2">
                    <a asp-controller="Admin" asp-action="Dashboard" class="edit-btn-cancel">
                        Cancel
                    </a>

                    <button type="submit" class="edit-btn-save">
                        Save Changes
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>