@model MCC.Models.ViewModels.EventViewModel

@{
    ViewData["Title"] = "Manage Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ==========================================================
           NEON DARK EVENT MANAGEMENT SYSTEM
        ========================================================== */
    :root {
        --bg-deep: #020617;
        --glass-panel: rgba(15, 23, 42, 0.7);
        --neon-primary: #00d2ff; /* Electric Cyan */
        --neon-secondary: #3a7bd5;
        --neon-grad: linear-gradient(135deg, #00d2ff 0%, #3a7bd5 100%);
        --tier-low-glow: #0ea5e9;
        --tier-med-glow: #f59e0b;
        --tier-high-glow: #f43f5e;
        --text-ghost: #f8fafc;
        --text-dim: #64748b;
        --border-subtle: rgba(255, 255, 255, 0.05);
    }

    .admin-content-wrapper {
        background-color: var(--bg-deep);
        background-image: radial-gradient(at 0% 0%, rgba(0, 210, 255, 0.08) 0px, transparent 50%), radial-gradient(at 100% 0%, rgba(58, 123, 213, 0.08) 0px, transparent 50%);
        min-height: 100vh;
        padding: 50px 30px;
        color: var(--text-ghost);
    }

    .neon-card {
        background: var(--glass-panel);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid var(--border-subtle);
        border-radius: 30px;
        padding: 40px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    .admin-page-title {
        font-weight: 900;
        font-size: 2.2rem;
        letter-spacing: -1px;
        background: var(--neon-grad);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Form Elements */
    .neon-label {
        font-size: 0.7rem;
        font-weight: 800;
        color: var(--neon-primary);
        text-transform: uppercase;
        letter-spacing: 1.5px;
        margin-bottom: 10px;
        display: block;
    }

    .neon-input {
        width: 100%;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 14px 18px;
        color: white;
        transition: all 0.3s ease;
    }

        .neon-input:focus {
            outline: none;
            border-color: var(--neon-primary);
            box-shadow: 0 0 15px rgba(0, 210, 255, 0.2);
            background: rgba(0, 0, 0, 0.5);
        }

    /* Tier Boxes */
    .tier-neon-box {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--border-subtle);
        border-radius: 20px;
        padding: 25px;
        transition: all 0.3s ease;
        position: relative;
    }

        .tier-neon-box:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.04);
        }

    .tier-low {
        border-left: 4px solid var(--tier-low-glow);
    }

    .tier-med {
        border-left: 4px solid var(--tier-med-glow);
    }

    .tier-high {
        border-left: 4px solid var(--tier-high-glow);
    }

    .tier-title {
        font-weight: 800;
        font-size: 0.9rem;
        margin-bottom: 20px;
        letter-spacing: 1px;
    }

    /* Buttons */
    .btn-neon-publish {
        background: var(--neon-grad);
        color: white;
        border: none;
        padding: 16px 40px;
        border-radius: 15px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 10px 20px rgba(0, 210, 255, 0.3);
        transition: all 0.3s ease;
    }

        .btn-neon-publish:hover {
            transform: scale(1.03);
            box-shadow: 0 15px 30px rgba(0, 210, 255, 0.5);
        }

    /* Table System */
    .neon-table thead th {
        color: var(--text-dim);
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        border: none;
        padding-bottom: 20px;
    }

    .neon-row {
        background: rgba(255, 255, 255, 0.02);
        transition: all 0.3s ease;
    }

        .neon-row:hover {
            background: rgba(255, 255, 255, 0.05);
        }

        .neon-row td {
            padding: 20px 15px;
            border-top: 1px solid var(--border-subtle);
            border-bottom: 1px solid var(--border-subtle);
        }

            .neon-row td:first-child {
                border-left: 1px solid var(--border-subtle);
                border-radius: 15px 0 0 15px;
            }

            .neon-row td:last-child {
                border-right: 1px solid var(--border-subtle);
                border-radius: 0 15px 15px 0;
            }

    .venue-tag {
        background: rgba(0, 210, 255, 0.1);
        color: var(--neon-primary);
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: 700;
    }
</style>

<div class="d-flex">
    @await Html.PartialAsync("_AdminSidebar")

    <div class="admin-content-wrapper flex-fill">

        <div class="neon-card mb-5 mx-auto" style="max-width: 1000px;">
            <div class="d-flex justify-content-between align-items-end mb-5">
                <div>
                    <h2 class="admin-page-title">Deploy Event</h2>
                    <p class="text-muted m-0">Initialize a new instance on the MCC platform catalog.</p>
                </div>
                <div class="opacity-25">
                    <svg width="60" height="60" fill="var(--neon-primary)" viewBox="0 0 16 16"><path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" /><path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" /></svg>
                </div>
            </div>

            <form asp-action="CreateEvent" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger small mb-4"></div>

                <div class="row g-4 mb-5">
                    <div class="col-md-12">
                        <label class="neon-label">Event Protocol Name</label>
                        <input asp-for="Event.Title" class="neon-input" placeholder="e.g., TECH CONVERGENCE 2026" />
                    </div>

                    <div class="col-md-4">
                        <label class="neon-label">Launch Date</label>
                        <input asp-for="Event.Date" type="date" class="neon-input" />
                    </div>

                    <div class="col-md-4">
                        <label class="neon-label">Classification</label>
                        <select asp-for="Event.CategoryId" asp-items="Model.Categories" class="neon-input">
                            <option value="">-- Select --</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label class="neon-label">Assigned Venue</label>
                        <select asp-for="Event.VenueId" asp-items="Model.Venues" class="neon-input">
                            <option value="">-- Select --</option>
                        </select>
                    </div>
                </div>

                <h4 class="neon-label mb-4" style="font-size: 0.9rem;">Pricing Configuration</h4>

                <div class="row g-4 mb-5">
                    <div class="col-md-4">
                        <div class="tier-neon-box tier-low">
                            <h5 class="tier-title" style="color: var(--tier-low-glow)">Budget Tier</h5>
                            <label class="neon-label opacity-50">Capcity</label>
                            <input asp-for="Event.LowSeats" type="number" class="neon-input mb-3" placeholder="0" />
                            <label class="neon-label opacity-50">Unit Price</label>
                            <input asp-for="Event.LowPrice" type="number" step="0.01" class="neon-input" placeholder="0.00" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="tier-neon-box tier-med">
                            <h5 class="tier-title" style="color: var(--tier-med-glow)">Standard Tier</h5>
                            <label class="neon-label opacity-50">Capacity</label>
                            <input asp-for="Event.MediumSeats" type="number" class="neon-input mb-3" placeholder="0" />
                            <label class="neon-label opacity-50">Unit Price</label>
                            <input asp-for="Event.MediumPrice" type="number" step="0.01" class="neon-input" placeholder="0.00" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="tier-neon-box tier-high">
                            <h5 class="tier-title" style="color: var(--tier-high-glow)">Premium Tier</h5>
                            <label class="neon-label opacity-50">Capacity</label>
                            <input asp-for="Event.HighSeats" type="number" class="neon-input mb-3" placeholder="0" />
                            <label class="neon-label opacity-50">Unit Price</label>
                            <input asp-for="Event.HighPrice" type="number" step="0.01" class="neon-input" placeholder="0.00" />
                        </div>
                    </div>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn-neon-publish">
                        Publish to Network
                    </button>
                </div>
            </form>
        </div>

        <div class="neon-card mx-auto" style="max-width: 1000px;">
            <h2 class="admin-page-title mb-4" style="font-size: 1.5rem;">Live Catalog Nodes</h2>

            <div class="table-responsive">
                <table class="table neon-table align-middle" style="border-collapse: separate; border-spacing: 0 10px;">
                    <thead>
                        <tr>
                            <th class="ps-3">Instance Name</th>
                            <th>Schedule</th>
                            <th>Location Node</th>
                            <th class="text-end pe-3">Command</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Events != null && Model.Events.Any())
                        {
                            @foreach (var item in Model.Events)
                            {
                                <tr class="neon-row">
                                    <td class="ps-3">
                                        <div class="fw-bold text-white">@item.Title</div>
                                        <div style="color: var(--neon-primary); font-size: 0.75rem;">@item.Category?.Name</div>
                                    </td>
                                    <td>
                                        <div class="text-white small">@item.Date.ToString("yyyy.MM.dd")</div>
                                    </td>
                                    <td>
                                        <span class="venue-tag">@item.Venue?.Name</span>
                                    </td>
                                    <td class="text-end pe-3">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a asp-action="EditEvent" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" style="border-radius: 8px; font-weight: 700;">EDIT</a>

                                            <form asp-action="DeleteEvent" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" style="border-radius: 8px; font-weight: 700;">KILL</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">No active data streams found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>