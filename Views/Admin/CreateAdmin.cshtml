@{
    ViewData["Title"] = "Create Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex">

    <partial name="_AdminSidebar" />

    <div class="admin-content-wrapper flex-fill">
        <div class="admin-card">
            <h2 class="admin-page-title">Create Admin</h2>
            <p class="text-muted mb-4">Add a new administrator to the SEM platform.</p>

            <form asp-action="CreateAdmin" method="post" class="admin-form">
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <input name="fullName" class="admin-input" placeholder="Full Name" required />
                </div>

                <div class="form-group mb-3">
                    <input name="email" type="email" class="admin-input" placeholder="Email Address" required />
                </div>

                <div class="form-group mb-4">
                    <input name="password" type="password" class="admin-input" placeholder="Secure Password" required />
                </div>

                <button type="submit" class="admin-btn-gradient w-100">Create Admin Account</button>
            </form>

            @if (ViewBag.Success != null)
            {
                <div class="admin-alert admin-alert-success mt-4">
                    <strong>Success!</strong> @ViewBag.Success
                </div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="admin-alert admin-alert-danger mt-4">
                    <strong>Error!</strong> @ViewBag.Error
                </div>
            }
        </div>
    </div>
</div>