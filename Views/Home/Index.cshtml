@model IEnumerable<MCC.Models.Event>

@{
    ViewData["Title"] = "Home";
}

<style>
    /* ==========================================================
           NEON DARK HOMEPAGE DESIGN SYSTEM
        ========================================================== */
    :root {
        --bg-void: #020617;
        --glass-panel: rgba(15, 23, 42, 0.75);
        --neon-primary: #8b5cf6; /* Electric Purple */
        --neon-secondary: #06b6d4; /* Cyan Glow */
        --neon-accent: #f43f5e; /* Rose */
        --neon-grad: linear-gradient(135deg, #8b5cf6 0%, #06b6d4 100%);
        --text-ghost: #f8fafc;
        --text-slate: #94a3b8;
        --border-glass: rgba(255, 255, 255, 0.08);
    }

    .home-neon-container {
        background-color: var(--bg-void);
        color: var(--text-ghost);
        font-family: 'Inter', system-ui, sans-serif;
        overflow-x: hidden;
    }

    /* ✨ ULTRA MODERN CYBER HERO ✨ */
    .home-neon-hero {
        position: relative;
        padding: 160px 20px;
        min-height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        /* Forces edge-to-edge full width */
        width: 100vw;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        background: radial-gradient(circle at 20% 30%, rgba(139, 92, 246, 0.15) 0%, transparent 40%), radial-gradient(circle at 80% 70%, rgba(6, 182, 212, 0.15) 0%, transparent 40%);
        margin-top: -1.5rem !important;
        border-bottom: 1px solid var(--border-glass);
    }

        /* Floating Animated Particles (CSS Only) */
        .home-neon-hero::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background-image: radial-gradient(white 1px, transparent 1px);
            background-size: 50px 50px;
            opacity: 0.05;
            animation: pulseBG 8s infinite alternate;
        }

    @@keyframes pulseBG {
        from {
            transform: translateY(0);
        }

        to {
            transform: translateY(-20px);
        }
    }

    .home-neon-hero-title {
        font-weight: 900;
        font-size: 5rem;
        letter-spacing: -3px;
        line-height: 0.9;
        background: linear-gradient(to bottom, #fff 30%, var(--text-slate));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 25px;
        filter: drop-shadow(0 0 30px rgba(139, 92, 246, 0.3));
    }

    .home-neon-hero-text {
        font-size: 1.25rem;
        color: var(--text-slate);
        max-width: 600px;
        margin-bottom: 45px;
        letter-spacing: 0.5px;
        z-index: 2;
    }

    /* Glass Action Button */
    .home-neon-hero-btn {
        background: var(--neon-grad);
        color: white;
        padding: 18px 50px;
        font-size: 1rem;
        font-weight: 800;
        border-radius: 50px;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 2px;
        box-shadow: 0 0 30px rgba(139, 92, 246, 0.4);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        z-index: 2;
    }

        .home-neon-hero-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 0 50px rgba(6, 182, 212, 0.6);
            color: white;
        }

    /* Section Titles */
    .home-neon-section-title {
        font-weight: 800;
        font-size: 2rem;
        letter-spacing: -1px;
        margin-bottom: 50px;
        color: #fff;
        display: flex;
        align-items: center;
        gap: 15px;
    }

        .home-neon-section-title::after {
            content: '';
            flex: 1;
            height: 1px;
            background: var(--border-glass);
        }

    /* Holographic Grid Cards */
    .home-neon-card {
        background: var(--glass-panel);
        backdrop-filter: blur(20px);
        border: 1px solid var(--border-glass);
        border-radius: 24px;
        padding: 30px;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

        .home-neon-card:hover {
            border-color: var(--neon-secondary);
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

        .home-neon-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 0;
            background: var(--neon-grad);
            transition: height 0.4s ease;
        }

        .home-neon-card:hover::before {
            height: 100%;
        }

    .home-neon-card-title {
        font-weight: 800;
        color: #fff;
        font-size: 1.4rem;
        margin-bottom: 15px;
    }

    .home-neon-card-text {
        color: var(--text-slate);
        font-size: 0.9rem;
        line-height: 1.6;
        margin-bottom: 25px;
    }

    /* Outline Button */
    .home-neon-btn-outline {
        border: 1px solid var(--neon-secondary);
        color: var(--neon-secondary);
        padding: 12px 25px;
        border-radius: 12px;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 1px;
        text-decoration: none;
        display: inline-block;
        width: 100%;
        text-align: center;
        transition: all 0.3s;
    }

        .home-neon-btn-outline:hover {
            background: var(--neon-secondary);
            color: var(--bg-void);
            box-shadow: 0 0 20px rgba(6, 182, 212, 0.4);
        }

    /* Step System */
    .neon-badge {
        width: 50px;
        height: 50px;
        background: rgba(255,255,255,0.05);
        border: 1px solid var(--border-glass);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--neon-secondary);
        font-weight: 900;
        font-size: 1.5rem;
        margin-bottom: 20px;
        transition: all 0.3s;
    }

    .home-neon-card:hover .neon-badge {
        background: var(--neon-secondary);
        color: var(--bg-void);
        box-shadow: 0 0 20px var(--neon-secondary);
    }

    .footer-cta {
        padding: 100px 0;
        text-align: center;
        background: linear-gradient(to bottom, transparent, rgba(139, 92, 246, 0.05));
    }
</style>

<div class="home-neon-container">

    <div class="home-neon-hero">
        <h1 class="home-neon-hero-title">METROPOLITAN <br> CULTURAL COUNCIL</h1>
        <p class="home-neon-hero-text">
            Experience the next generation of event management. Explore, book, and engage with the city's finest cultural clusters.
        </p>

        <a class="home-neon-hero-btn" asp-controller="Events" asp-action="Index">
            Enter Discovery
        </a>
    </div>

    <div class="py-5 container">
        <h2 class="home-neon-section-title">ACTIVE BROADCASTS</h2>

        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="home-neon-card h-100">
                        <div class="small fw-bold text-uppercase mb-2" style="color: var(--neon-primary); letter-spacing: 2px;">
                            @item.Category?.Name
                        </div>
                        <h5 class="home-neon-card-title">@item.Title</h5>

                        <div class="home-neon-card-text">
                            <div class="mb-1"><span class="opacity-50">NODE:</span> @item.Venue?.Name</div>
                            <div><span class="opacity-50">SYNC:</span> @item.Date.ToString("dd.MM.yyyy")</div>
                        </div>

                        <a asp-controller="Event" asp-action="Details" asp-route-id="@item.Id" class="home-neon-btn-outline">
                            Initialize Sync
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="py-5 container">
        <h2 class="home-neon-section-title">NETWORK INITIALIZATION</h2>

        <div class="row g-4">
            <div class="col-md-3">
                <div class="home-neon-card">
                    <div class="neon-badge">01</div>
                    <h5 class="home-neon-card-title" style="font-size: 1.1rem;">ID Synthesis</h5>
                    <p class="home-neon-card-text">Create your MCC encrypted profile to access the secure booking network.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="home-neon-card">
                    <div class="neon-badge">02</div>
                    <h5 class="home-neon-card-title" style="font-size: 1.1rem;">Preference Tag</h5>
                    <p class="home-neon-card-text">Configure your cultural telemetry to filter theatre, music, or art streams.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="home-neon-card">
                    <div class="neon-badge">03</div>
                    <h5 class="home-neon-card-title" style="font-size: 1.1rem;">Scan Catalog</h5>
                    <p class="home-neon-card-text">Navigate through live event nodes synced by location and price matrices.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="home-neon-card">
                    <div class="neon-badge">04</div>
                    <h5 class="home-neon-card-title" style="font-size: 1.1rem;">Secure Access</h5>
                    <p class="home-neon-card-text">Finalize ticket acquisition through our 256-bit encrypted checkout.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-cta">
        <h3 class="mb-4 fw-bold" style="font-size: 2rem;">READY TO CONNECT?</h3>
        <a class="home-neon-hero-btn" asp-area="Identity" asp-page="/Account/Register">
            Begin Registration
        </a>
        <p class="mt-4 text-slate small opacity-50">SYSTEM SECURED // 2026 MCC PROTOCOL</p>
    </div>

</div>