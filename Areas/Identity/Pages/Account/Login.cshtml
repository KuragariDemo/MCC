@page
@model SEM.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-css-wrapper">
    <div class="login-css-card">
        <h2 class="login-css-title">Welcome Back</h2>

        <form method="post">
            <div class="login-css-group">
                <label asp-for="Input.Email" class="login-css-label"></label>
                <input asp-for="Input.Email" class="login-css-input" placeholder="Enter your email" />
                <span asp-validation-for="Input.Email" class="login-css-error"></span>
            </div>

            <div class="login-css-group">
                <label asp-for="Input.Password" class="login-css-label"></label>
                <input asp-for="Input.Password" class="login-css-input" placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="login-css-error"></span>
            </div>

            <div class="login-css-check-group">
                <input asp-for="Input.RememberMe" class="login-css-checkbox" />
                <label asp-for="Input.RememberMe" class="login-css-label" style="margin-bottom: 0; cursor: pointer;"></label>
            </div>

            <button type="submit" class="login-css-btn">Login</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}