@page
@model MCC.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>
    /* ==========================================================
           NEON DARK LOGIN DESIGN SYSTEM
        ========================================================== */
    :root {
        --bg-void: #020617;
        --glass-panel: rgba(15, 23, 42, 0.8);
        --neon-primary: #8b5cf6; /* Electric Purple */
        --neon-secondary: #06b6d4; /* Cyan Glow */
        --neon-grad: linear-gradient(135deg, #8b5cf6 0%, #06b6d4 100%);
        --text-ghost: #f8fafc;
        --text-slate: #94a3b8;
        --border-glass: rgba(255, 255, 255, 0.08);
    }

    .login-css-wrapper {
        background-color: var(--bg-void);
        background-image: radial-gradient(circle at 10% 10%, rgba(139, 92, 246, 0.12) 0px, transparent 40%), radial-gradient(circle at 90% 90%, rgba(6, 182, 212, 0.12) 0px, transparent 40%);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        font-family: 'Inter', system-ui, sans-serif;
    }

    .login-css-card {
        background: var(--glass-panel);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        border: 1px solid var(--border-glass);
        border-radius: 32px;
        padding: 50px 40px;
        width: 100%;
        max-width: 450px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.8);
        position: relative;
        overflow: hidden;
    }

        /* Top Scanning Line Effect */
        .login-css-card::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background: var(--neon-grad);
            box-shadow: 0 0 15px var(--neon-primary);
            animation: scanline 3s linear infinite;
        }

    @@keyframes scanline {
        0% {
            transform: translateX(-100%);
        }

        100% {
            transform: translateX(100%);
        }
    }

    .login-css-title {
        font-weight: 900;
        font-size: 2.2rem;
        letter-spacing: -1.5px;
        color: var(--text-ghost);
        margin-bottom: 10px;
        text-align: center;
        text-transform: uppercase;
    }

    .login-css-subtitle {
        color: var(--neon-secondary);
        text-align: center;
        font-size: 0.8rem;
        letter-spacing: 3px;
        text-transform: uppercase;
        margin-bottom: 40px;
        font-weight: 700;
    }

    .login-css-group {
        margin-bottom: 25px;
        position: relative;
    }

    .login-css-label {
        color: var(--text-slate);
        font-size: 0.7rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        margin-bottom: 10px;
        display: block;
    }

    .login-css-input {
        width: 100%;
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid var(--border-glass);
        border-radius: 14px;
        padding: 16px 20px;
        color: #fff;
        font-size: 1rem;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .login-css-input:focus {
            outline: none;
            border-color: var(--neon-primary);
            background: rgba(0, 0, 0, 0.6);
            box-shadow: 0 0 20px rgba(139, 92, 246, 0.2);
        }

    .login-css-error {
        color: #fb7185;
        font-size: 0.75rem;
        font-weight: 600;
        margin-top: 8px;
        display: block;
    }

    /* Custom Checkbox Styling */
    .login-css-check-group {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 30px;
    }

    .login-css-checkbox {
        width: 18px;
        height: 18px;
        accent-color: var(--neon-primary);
        cursor: pointer;
    }

    /* Neon Button */
    .login-css-btn {
        background: var(--neon-grad);
        color: #000;
        border: none;
        padding: 18px;
        width: 100%;
        font-weight: 900;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        border-radius: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 10px 20px rgba(139, 92, 246, 0.3);
    }

        .login-css-btn:hover {
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 0 30px rgba(6, 182, 212, 0.5);
            filter: brightness(1.1);
        }

    .login-footer-links {
        margin-top: 25px;
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

        .login-footer-links a {
            color: var(--text-slate);
            text-decoration: none;
            font-size: 0.8rem;
            font-weight: 600;
            transition: color 0.3s;
        }

            .login-footer-links a:hover {
                color: var(--neon-secondary);
            }
</style>

<div class="login-css-wrapper">
    <div class="login-css-card">
        <h2 class="login-css-title">Access Point</h2>
        <p class="login-css-subtitle">Identity Verification Required</p>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="login-css-error mb-3" role="alert"></div>

            <div class="login-css-group">
                <label asp-for="Input.Email" class="login-css-label">System User ID</label>
                <input asp-for="Input.Email" class="login-css-input" placeholder="EMAIL_ADDRESS" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="login-css-error"></span>
            </div>

            <div class="login-css-group">
                <label asp-for="Input.Password" class="login-css-label">Security Key</label>
                <input asp-for="Input.Password" type="password" class="login-css-input" placeholder="••••••••" autocomplete="current-password" />
                <span asp-validation-for="Input.Password" class="login-css-error"></span>
            </div>

            <div class="login-css-check-group">
                <input asp-for="Input.RememberMe" class="login-css-checkbox" />
                <label asp-for="Input.RememberMe" class="login-css-label" style="margin-bottom: 0; cursor: pointer; opacity: 0.8;">Persistent Link</label>
            </div>

            <button type="submit" class="login-css-btn">Initiate Login</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}