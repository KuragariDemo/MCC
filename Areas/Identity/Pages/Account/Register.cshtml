@page
@model SEM.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-css-wrapper">
    <div class="register-css-card">
        <h2 class="register-css-title">Create Account</h2>

        <form method="post">
            <div class="register-css-group">
                <label asp-for="Input.FullName" class="register-css-label"></label>
                <input asp-for="Input.FullName" class="register-css-input" placeholder="e.g. John Doe" />
                <span asp-validation-for="Input.FullName" class="register-css-error"></span>
            </div>

            <div class="register-css-group">
                <label asp-for="Input.Email" class="register-css-label"></label>
                <input asp-for="Input.Email" class="register-css-input" placeholder="e.g. name@example.com" />
                <span asp-validation-for="Input.Email" class="register-css-error"></span>
            </div>

            <div class="register-css-group">
                <label asp-for="Input.Password" class="register-css-label"></label>
                <input asp-for="Input.Password" class="register-css-input" placeholder="Create a password" />
                <span asp-validation-for="Input.Password" class="register-css-error"></span>
            </div>

            <div class="register-css-group">
                <label asp-for="Input.ConfirmPassword" class="register-css-label"></label>
                <input asp-for="Input.ConfirmPassword" class="register-css-input" placeholder="Confirm your password" />
                <span asp-validation-for="Input.ConfirmPassword" class="register-css-error"></span>
            </div>

            <button type="submit" class="register-css-btn">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
